<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzuli.jz.dao.extend.UserExtendMapper">

    <select id="selectAllWithRole" resultMap="UserExtendResultMap">
        SELECT * FROM base_user
    </select>

    <select id="selectAllEmployee" resultMap="UserExtendResultMap">
        SELECT * FROM base_user
        WHERE role_id = 3
    </select>


    <resultMap id="UserExtendResultMap" type="com.zzuli.jz.bean.extend.UserExtend" extends="com.zzuli.jz.dao.UserMapper.BaseResultMap">
        <association property="role" column="role_id" select="com.zzuli.jz.dao.RoleMapper.selectByPrimaryKey"></association>
    </resultMap>

</mapper>